doctype html
html(lang="en")
  head
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    title Users List
  body
    div.container
      h1.mt-4.mb-3 Users List
      table.table.table-hover
        thead
          tr
            th ID
            th Username
            th Email
            th Actions
        tbody
          each user in users
            tr
              td= user.id
              td= user.username
              td= user.email
              td
                a.btn.btn-primary(href=`/users/${user.id}`) View
